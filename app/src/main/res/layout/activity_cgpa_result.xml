<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/dark_turquoise"
    tools:context=".cgpa_result">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/front_backgnd"
        android:elevation="5dp">

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="Your SGPA"
            android:textColor="@color/Dark_Background"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/sgpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:freezesText="true"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sgpa"
            android:layout_alignLeft="@+id/t"
            android:layout_alignRight="@+id/t"
            android:layout_marginTop="52dp"
            android:gravity="center"
            android:text="With Percentage"
            android:textColor="@color/Dark_Background"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t3"
            android:layout_alignLeft="@+id/sgpa"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal">

            <requestFocus />
        </EditText>
    </RelativeLayout>

</RelativeLayout>